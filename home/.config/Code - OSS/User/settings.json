{
  "bashIde.path": "/usr/bin/bash-language-server",

  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": true,

  "editor.emptySelectionClipboard": false,
  "editor.fontFamily": "'Hack Nerd Font','Hack','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.renderControlCharacters": true,
  "editor.renderFinalNewline": true,
  "editor.renderWhitespace": "all",
  "editor.rulers": [80],
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.wordWrap": "on",

  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  "gitlab.enableExperimentalFeatures": true,
  "gitlab.showPipelineUpdateNotifications": true,

  "go.lintFlags": [
    "--fast"
  ],
  "go.lintTool": "golangci-lint",
  "go.testOnSave": true,
  "go.useLanguageServer": true,

  "material-icon-theme.saturation": 0.7,
  "material-icon-theme.opacity": 1,

  "oneDarkPro.italic": false,

  "rust-client.rustupPath": "/home/john/.cargo/bin/rustup",

  "terminal.external.linuxExec": "konsole",

  "terminal.integrated.cursorBlinking": true,

  "todohighlight.isCaseSensitive": true,
  "todohighlight.isEnable": true,
  "todohighlight.keywords": [
    {
      "backgroundColor": "#282c34",
      "color": "#e06c75",
      "overviewRulerColor": "#e06c7588",
      "text": "DEPRECATED"
    },
    {
      "backgroundColor": "#282c34",
      "color": "#e06c75",
      "overviewRulerColor": "#e06c7588",
      "text": "FIXME"
    },
    {
      "backgroundColor": "#282c34",
      "color": "#e06c75",
      "overviewRulerColor": "#e06c7588",
      "text": "HACK"
    },
    {
      "backgroundColor": "#282c34",
      "color": "#61afef",
      "overviewRulerColor": "#61afef88",
      "text": "NOTE"
    },
    {
      "backgroundColor": "#282c34",
      "color": "#56b6c2",
      "overviewRulerColor": "#56b6c288",
      "text": "THANKS"
    },
    {
      "backgroundColor": "282c34",
      "color": "#d19a66",
      "overviewRulerColor": "#d19a6688",
      "text": "TODO"
    }
  ],

  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  "window.restoreWindows": "none",
  "window.titleBarStyle": "native",
  "window.zoomLevel": 0,

  "workbench.colorTheme": "One Dark Pro",
  "workbench.colorCustomizations": {
    "editor.selectionHighlightBackground": "#ffffff1a",
    "editor.selectionHighlightBorder":"#00000000",
    "editorWhitespace.foreground": "#5C6370",
    "terminal.background": "#282C34",
    "terminal.foreground": "#ABB2BF",
    "terminalCursor.background": "#282C34",
    "terminalCursor.foreground": "#ABB2BF",
    "terminal.ansiBlack": "#282C34",
    "terminal.ansiBlue": "#61AFEF",
    "terminal.ansiBrightBlack": "#282C34",
    "terminal.ansiBrightBlue": "#61AFEF",
    "terminal.ansiBrightCyan": "#56B6C2",
    "terminal.ansiBrightGreen": "#98C379",
    "terminal.ansiBrightMagenta": "#C678DD",
    "terminal.ansiBrightRed": "#E06C75",
    "terminal.ansiBrightWhite": "#FFFFFF",
    "terminal.ansiBrightYellow": "#D19A66",
    "terminal.ansiCyan": "#56B6C2",
    "terminal.ansiGreen": "#98C379",
    "terminal.ansiMagenta": "#C678DD",
    "terminal.ansiRed": "#E06C75",
    "terminal.ansiWhite": "#ABB2BF",
    "terminal.ansiYellow": "#D19A66"
  },
  "workbench.iconTheme": "material-icon-theme",

  "workbench.editor.tabSizing": "shrink",

  "workbench.sideBar.location": "left",

  "[python]": {
    "editor.tabSize": 4
  }
}
