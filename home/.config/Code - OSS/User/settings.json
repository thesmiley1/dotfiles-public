{
  "bashIde.path": "/usr/bin/bash-language-server",

  "diffEditor.ignoreTrimWhitespace": false,

  "editor.emptySelectionClipboard": false,
  "editor.fontFamily": "'Hack','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.renderControlCharacters": true,
  "editor.renderFinalNewline": true,
  "editor.renderWhitespace": "all",
  "editor.rulers": [80],
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.wordWrap": "on",

  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  "gitlab.enableExperimentalFeatures": true,
  "gitlab.showPipelineUpdateNotifications": true,

  "go.lintFlags": [
    "--fast"
  ],
  "go.lintTool": "golangci-lint",
  "go.testOnSave": true,
  "go.useLanguageServer": true,

  "markdown.extension.toc.unorderedList.marker": "*",

  "rust-client.rustupPath": "/home/john/.cargo/bin/rustup",

  "terminal.external.linuxExec": "konsole",

  "todohighlight.isCaseSensitive": true,
  "todohighlight.isEnable": true,
  "todohighlight.keywords": [
    {
      "backgroundColor": "#282c34",
      "color": "#e06c75",
      "overviewRulerColor": "#e06c7588",
      "text": "FIXME"
    },
    {
      "backgroundColor": "#282c34",
      "color": "#e06c75",
      "overviewRulerColor": "#e06c7588",
      "text": "HACK"
    },
    {
      "backgroundColor": "#282c34",
      "color": "#61afef",
      "overviewRulerColor": "#61afef88",
      "text": "NOTE"
    },
    {
      "backgroundColor": "#282c34",
      "color": "#56b6c2",
      "overviewRulerColor": "#56b6c288",
      "text": "THANKS"
    },
    {
      "backgroundColor": "282c34",
      "color": "#d19a66",
      "overviewRulerColor": "#d19a6688",
      "text": "TODO"
    }
  ],

  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  "window.restoreWindows": "none",
  "window.titleBarStyle": "native",

  "workbench.colorTheme": "Atom One Dark",
  "workbench.colorCustomizations": {
    "editor.selectionHighlightBackground": "#ffffff1a",
    "editor.selectionHighlightBorder":"#00000000",
    "editorWhitespace.foreground": "#5C6370"
  },
  "workbench.sideBar.location": "left",

  "[python]": {
    "editor.tabSize": 4
  }
}
