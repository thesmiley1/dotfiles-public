{
  "editor.emptySelectionClipboard": false,
  "editor.fontFamily": "'Hack','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.renderControlCharacters": true,
  "editor.renderFinalNewline": true,
  "editor.renderWhitespace": "all",
  "editor.rulers": [80],
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.wordWrap": "on",

  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  "gitlab.enableExperimentalFeatures": true,
  "gitlab.showPipelineUpdateNotifications": true,

  "go.lintTool": "golangci-lint",
  "go.testOnSave": true,
  "go.useLanguageServer": true,

  "terminal.external.linuxExec": "konsole",

  "todohighlight.isEnable": true,
  "todohighlight.keywords": [
    {
      "color": "#282c34",
      "backgroundColor": "#61afef",
      "text": "NOTE:"
    },
    {
      "color": "#282c34",
      "backgroundColor": "#56b6c2",
      "text": "THANKS:"
    }
  ],

  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  "window.restoreWindows": "none",
  "window.titleBarStyle": "native",

  "workbench.colorTheme": "Atom One Dark",
  "workbench.colorCustomizations": {
    "editor.selectionHighlightBackground": "#ffffff1a",
    "editor.selectionHighlightBorder":"#00000000",
    "editorWhitespace.foreground": "#5C6370"
  },
  "workbench.sideBar.location": "left",

  "[python]": {
    "editor.tabSize": 4
  },
  "rust-client.rustupPath": "/home/john/.cargo/bin/rustup",
  "markdown.extension.toc.unorderedList.marker": "*"
}
